version: "3"
services:
  mysql:
    image: mysql:5.7
    container_name: mysql_hdfs
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: sakila
      MYSQL_USER: root
      MYSQL_PASSWORD: root
    volumes:
      - ./data/mysql:/var/lib/mysql
    ports:
      - 3306:3306
  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: phpmyadmin_hdfs
    restart: always
    depends_on:
      - mysql
    ports:
      - 8097:80
    volumes:
      - ./data/phpmyadmin/:/sessions
    environment:
      - PMA_HOSTS=mysql
  sqoop_server:
    build: ./sqoop_server_hdfs
    container_name: sqoop_server_hdfs
    ports:
      - 12000:12000
      - 50070:50070
      - 8088:8088
      - 8042:8042
    links:
      - mysql
    tty: true
